@model IEnumerable<PC_configurator.Models.SystemUnit>

<h2>Желаемые комплектующие</h2>
<p><a asp-action="Create">Добавить комплектующие</a></p>
<table class="table">
    <tr><th>Процессор</th><th>Корпус</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CPU</td>
            <td>@item.ComputerCase</td>
            <td>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
